{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "rootDirs": ["./src"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/*", "dist"]
}
