// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    String  @id @default(uuid())
  name  String
  price Decimal @db.Decimal(18, 2)
}

model Customer {
  id           String  @id @default(uuid())
  name         String
  street       String
  number       Int
  zipCode      String
  city         String
  active       Boolean
  rewardPoints Float
}
